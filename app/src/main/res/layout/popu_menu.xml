<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#f3f3f3"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/bt_collect"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"

                android:background="@drawable/bt_popu_press"
                android:clickable="true"
                android:drawableTop="@drawable/ic_star_border_black_24dp"
                android:paddingTop="15dp"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/bt_day"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bt_popu_press"
                android:clickable="true"
                android:drawableTop="@drawable/ic_brightness_4_black_24dp"
                android:paddingTop="15dp"

                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/bt_textSize"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:background="@drawable/bt_popu_press"
                android:clickable="true"
                android:drawableTop="@drawable/ic_brightness_auto_black_24dp"
                android:paddingTop="15dp"

                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/bt_popu_press"
                android:clickable="true"
                android:drawableTop="@drawable/ic_share_black_24dp"
                android:paddingTop="15dp"
                android:textSize="13sp" />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/LinearLayout"
        android:background="@drawable/bt_press"
        android:text="取消" />
</RelativeLayout>
