<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.v2ex">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:theme="@style/ActivityTheme"

            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/ActivityTheme"
            android:name=".ui.activity.TopicsDetalisActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".ui.activity.photoviewactivity"></activity>
        <activity android:name=".ui.activity.SiginActivity"></activity>
        <activity android:name=".ui.activity.UsersActivity"></activity>
        <activity android:name=".ui.activity.NodeTopticsActivity"></activity>
        <activity android:name=".ui.activity.NodeCollectActivity"></activity>
        <activity android:name=".ui.activity.TopticCollectActivity"></activity>
        <activity android:name=".ui.activity.SpecialActivity"></activity>
        <activity android:name=".ui.activity.CreateTopticActivity"></activity>
        <activity

            android:name=".ui.activity.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName=".ui.activity.NodeTopticsActivity"
            android:theme="@style/ActivityTheme"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.v2ex.ui.activity.NodeTopticsActivity" />
        </activity>
        <activity
            android:theme="@style/ActivityTheme"
            android:name=".ui.activity.search_activity"></activity>
    </application>

</manifest>